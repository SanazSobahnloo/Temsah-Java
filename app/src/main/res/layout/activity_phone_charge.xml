<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneCharge"
    android:background="@drawable/phonecharge"
    >


    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="247dp"
        android:layout_height="51dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="phone"

        android:maxLength="11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/priceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/irancel" />

    <ImageButton
        android:id="@+id/bwIrancel"
        android:layout_width="65dp"
        android:layout_height="47dp"

        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="2dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/hamrahAval"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/rightel"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:srcCompat="@drawable/bw_irancel" />

    <ImageButton
        android:id="@+id/rightel"
        android:layout_width="93dp"
        android:layout_height="47dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:background="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/irancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:srcCompat="@drawable/rightel" />

    <ImageButton
        android:id="@+id/hamrahAval"
        android:layout_width="46dp"
        android:layout_height="52dp"

        android:layout_marginStart="2dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="124dp"
        android:background="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/irancel"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:srcCompat="@drawable/hamrahaval" />

    <ImageButton
        android:id="@+id/irancel"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="2dp"
        android:background="#00FFFFFF"
        android:visibility="invisible"

        app:layout_constraintEnd_toStartOf="@+id/hamrahAval"
        app:layout_constraintStart_toEndOf="@+id/rightel"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:srcCompat="@drawable/irancel" />

    <ImageButton
        android:id="@+id/bwRightel"
        android:layout_width="93dp"
        android:layout_height="47dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/irancel"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:srcCompat="@drawable/bw_rightel" />

    <ImageButton
        android:id="@+id/bwHamrahAval"
        android:layout_width="46dp"
        android:layout_height="52dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="124dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/irancel"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:srcCompat="@drawable/bw_hamrahaval" />

    <Button
        android:id="@+id/buyBtn"
        android:layout_width="383dp"
        android:layout_height="54dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="#B8B8B8"
        android:enabled="false"
        android:text="خرید"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/appIconBtn"
        android:layout_width="138dp"
        android:layout_height="28dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contactUsBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/infoBtn"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="11dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/contactUsBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/contactUsBtn"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="9dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/infoBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/p100000"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="@color/lightGray"
        android:text="100000"
        android:textColor="@color/darkBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceBtn" />

    <Button
        android:id="@+id/p20000"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/lightGray"
        android:text="20000"
        android:textColor="@color/darkBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceBtn" />

    <Button
        android:id="@+id/p50000"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/lightGray"
        android:text="50000"
        android:textColor="@color/darkBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceBtn" />

    <Button
        android:id="@+id/p10000"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/lightGray"
        android:text="10000"
        android:textColor="@color/darkBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceBtn" />

    <TextView
        android:id="@+id/showCharge"
        android:layout_width="158dp"
        android:layout_height="98dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:gravity="center|right"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buyBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="75dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="مبلغ قابل پرداخت : "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>